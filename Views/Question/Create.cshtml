@model WebApplication1.Models.Question

@{
    ViewData["Title"] = "Thêm Question";
}

<div class="container py-4">
    <h2 class="mb-3">Thêm Question mới</h2>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

        <div class="mb-3">
            <label asp-for="ContentQuestion" class="form-label"></label>
            <textarea asp-for="ContentQuestion" class="form-control"></textarea>
            <span asp-validation-for="ContentQuestion" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Option1" class="form-label"></label>
            <input asp-for="Option1" class="form-control" />
            <span asp-validation-for="Option1" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Option2" class="form-label"></label>
            <input asp-for="Option2" class="form-control" />
            <span asp-validation-for="Option2" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Option3" class="form-label"></label>
            <input asp-for="Option3" class="form-control" />
            <span asp-validation-for="Option3" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Option4" class="form-label"></label>
            <input asp-for="Option4" class="form-control" />
            <span asp-validation-for="Option4" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Answer" class="form-label"></label>
            <input asp-for="Answer" class="form-control" placeholder="Nhập đúng Option1/2/3/4 hoặc đáp án" />
            <span asp-validation-for="Answer" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="levelId" class="form-label"></label>
            <input asp-for="levelId" type="number" class="form-control" />
            <span asp-validation-for="levelId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
    </form>
</div>
