@model List<WebApplication1.Models.ApplicationUser>

@{
    ViewData["Title"] = "Quản lý người chơi";
}

<style>
    .admin-player-header {
        border-radius: 18px;
        background: radial-gradient(circle at top left, #0f172a 0%, #1e293b 35%, #020617 100%);
        padding: 1.5rem 1.75rem;
        color: #e5e7eb;
        box-shadow: 0 26px 80px rgba(15, 23, 42, 0.85);
    }

    .admin-player-header h2 {
        font-weight: 700;
        margin-bottom: 0.15rem;
    }

    .admin-player-header p {
        opacity: 0.9;
    }

    .admin-player-badge {
        background-color: rgba(148, 163, 184, 0.25);
        border-radius: 999px;
        padding: 0.35rem 0.9rem;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .admin-player-table-card {
        border-radius: 18px;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(15, 23, 42, 0.6);
        border: none;
    }

    .admin-player-table-card .table thead th {
        background-color: #0f172a;
        color: #e5e7eb;
    }
</style>

<div class="container py-4">
    <div class="row mb-3">
        <div class="col-12 d-flex justify-content-between align-items-center admin-player-header">
            <div>
                <h2 class="mb-1">Quản lý người chơi</h2>
                <p class="mb-0">Danh sách tài khoản game được tạo qua hệ thống đăng ký</p>
            </div>
            <span class="admin-player-badge">
                Tổng: @Model?.Count người chơi
            </span>
        </div>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    @if (ViewBag.RawResponse != null)
    {
        <details class="mb-3">
            <summary>Raw API response</summary>
            <pre>@ViewBag.RawResponse</pre>
        </details>
    }

    @if (Model != null && Model.Count > 0)
    {
        <div class="card admin-player-table-card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Id</th>
                        <th>Email</th>
                        <th>Tên hiển thị</th>
                        <th>RegionId</th>
                        <th>Avatar</th>
                        <th>Trạng thái</th>
                        <th style="width: 120px;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Email</td>
                            <td>@user.Name</td>
                            <td>@user.RegionId</td>
                            <td>
                                @if (!string.IsNullOrEmpty(user.Avatar))
                                {
                                    <img src="@user.Avatar" alt="Avatar" style="width:40px;height:40px;object-fit:cover;border-radius:50%;" />
                                }
                                else
                                {
                                    <span class="text-muted">(Không có)</span>
                                }
                            </td>
                            <td>
                                @if (user.IsDeleted)
                                {
                                    <span class="badge bg-danger">Đã khóa</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Đang hoạt động</span>
                                }
                            </td>
                            <td>
                                <a asp-controller="ApiDemo" asp-action="EditPlayer" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">Sửa</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info mt-3">Chưa có người chơi nào.</div>
    }
</div>
