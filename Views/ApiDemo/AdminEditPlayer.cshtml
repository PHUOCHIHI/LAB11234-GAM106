@model WebApplication1.Models.ApplicationUser

@{
    ViewData["Title"] = "Sửa thông tin người chơi";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark text-center">
                    <h3 class="mb-0">Sửa thông tin người chơi</h3>
                </div>
                <div class="card-body">
                    <form asp-action="EditPlayer" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RegionId" class="form-label"></label>
                            <input asp-for="RegionId" type="number" class="form-control" />
                            <span asp-validation-for="RegionId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Avatar" class="form-label"></label>
                            <input asp-for="Avatar" class="form-control" placeholder="Link ảnh avatar" />
                            <span asp-validation-for="Avatar" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="IsDeleted" />
                            <label class="form-check-label" asp-for="IsDeleted">
                                Khoá tài khoản (IsDeleted)
                            </label>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="AdminPlayers" class="btn btn-outline-secondary">Quay lại danh sách</a>
                            <button type="submit" class="btn btn-warning">Lưu thay đổi</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
