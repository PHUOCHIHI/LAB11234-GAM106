@model IEnumerable<WebApplication1.Models.GameLevel>

@{
    ViewData["Title"] = "Danh sách Game Level";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Danh sách Game Level</h2>
        <a asp-action="Create" class="btn btn-primary">+ Thêm level mới</a>
    </div>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Mã level</th>
                <th>Tiêu đề</th>
                <th>Mô tả</th>
                <th style="width:180px;">Hành động</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LevelId</td>
                <td>@item.title</td>
                <td>@item.Description</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.LevelId" class="btn btn-sm btn-outline-secondary">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.LevelId" class="btn btn-sm btn-outline-primary">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.LevelId" class="btn btn-sm btn-outline-danger">Xóa</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
